{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "esnext",
        "pretty": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
//        "isolatedModules": true,
        "declaration": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts"
    ],
    "exclude": [
        "./public",
        "node_modules",
        "dist"
    ]
}
